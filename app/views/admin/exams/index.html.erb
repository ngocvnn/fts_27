<% provide :title, "All Exams" %>
<h1>All Exams</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'shared/search_form' %>
  </div>
</div>

<div class="row">
  <div class="col-md-2"><%= sort_link @q, :category_name %></div>
  <div class="col-md-2"><%= sort_link @q, :created_at %></div>
  <div class="col-md-1"><%= sort_link @q, :result %></div>
  <div class="col-md-2"><%= sort_link @q, :started_time %></div>
  <div class="col-md-2"><%= sort_link @q, :user_name %></div>
  <div class="col-md-1"><%= sort_link @q, :status %></div>
</div>

<hr/>
<%= render @exams %>
<%= will_paginate @exams %>
