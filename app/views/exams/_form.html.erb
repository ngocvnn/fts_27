<ul>
  <li>
    <p>
      <strong>
        <%= @i= @i + 1 %>. <%= f.object.question.content %>
      </strong>
    </p>

    <% f.object.question.answers.each do |answer| %>
      <p>
        <span class="col-md-1">
          <%= f.radio_button :answer_id, answer.id %>
        </span>
        <span>
          <%= answer.content %>
        </span>
      </p>
    <% end %>
  </li>
</ul>
<br>
