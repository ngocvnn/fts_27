<% provide :title, t("title.all_exam") %>
<h1>All examinations</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @exam do |f| %>
      <div class="border-c">
        <%= f.collection_select :category_id, Category.all, :id, :name, 
          {}, {class: "form-control", style: "width: auto"} %>    
        <%= f.submit "Start", class: "start-new btn btn-primary" %>
      </div>
    <% end %>
  </div>  
</div>
<br>

<div class="exams">
  <%= render @exams %>
</div>

<%= will_paginate %>
